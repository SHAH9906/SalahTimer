<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/notifier"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_curve_white"
    >

    <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:elevation="10dp"
        android:background="@color/back1"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TimePicker
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/timePicker"
                        android:theme="@style/TimePickerTheme"
                        android:layout_margin="10dp"
                        />


                    <Button
                        android:id="@+id/butonnsetNotification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="@dimen/margin_20_dp"
                        android:background="@drawable/white_border"
                        android:padding="@dimen/text_size_15dp"
                        android:textAllCaps="true"
                        android:text="Notify"
                        android:textColor="@color/white" />



                </LinearLayout>

            </RelativeLayout>

        </ScrollView>
    </RelativeLayout>
</RelativeLayout>

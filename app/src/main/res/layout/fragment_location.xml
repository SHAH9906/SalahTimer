<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/back_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_marginTop="@dimen/margin_20_dp"
            android:layout_marginBottom="@dimen/margin_20_dp"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view"
                android:elevation="2dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_colorFilter="@color/back5"
                android:layout_centerInParent="true"
                app:lottie_rawRes="@raw/watch"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                />

        </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            app:cardBackgroundColor="@color/white"
            android:layout_marginLeft="@dimen/margin_20_dp"
            android:layout_marginRight="@dimen/margin_20_dp"
            app:cardCornerRadius="@dimen/margin_20_dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout

                android:layout_centerVertical="true"
                android:id="@+id/line"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.tomer.fadingtextview.FadingTextView
                android:id="@+id/qtext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50_dp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="@dimen/margin_20_dp"
                android:textSize="20sp"
                android:textStyle="normal"
                app:texts="@array/faded" />

                <AutoCompleteTextView
                    android:id="@+id/country"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_50_dp"
                    android:layout_marginLeft="@dimen/margin_20_dp"
                    android:layout_marginRight="@dimen/margin_20_dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_20_dp"
                    android:background="@drawable/edit_back"
                    android:textAlignment="center"
                    android:ellipsize="middle"
                    android:ems="10"
                    android:hint="country"
                    android:inputType="text"
                    android:textSize="@dimen/text_size_15dp"
                    >

                    <requestFocus />
                </AutoCompleteTextView>

                <AutoCompleteTextView
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_50_dp"
                    android:layout_marginLeft="@dimen/margin_20_dp"
                    android:layout_marginRight="@dimen/margin_20_dp"
                    android:background="@drawable/edit_back"
                    android:ellipsize="middle"
                    android:layout_centerHorizontal="true"
                    android:ems="10"
                    android:hint="city"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/margin_20_dp"
                    android:inputType="text"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large.Inverse"
                    android:textSize="@dimen/text_size_15dp"
                    >

                    <requestFocus />
                </AutoCompleteTextView>

                <Button
                    android:id="@+id/get_The_Results"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_20_dp"
                    android:layout_marginLeft="@dimen/margin_20_dp"
                    android:layout_marginTop="@dimen/margin_20_dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/custom_design_pressed_unpressed_holder"
                    android:padding="@dimen/text_size_15dp"
                    android:text="salah timings"
                    android:layout_marginBottom="@dimen/margin_20_dp"
                    android:textColor="@drawable/textcolor_pressed_unpressed" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>



    </LinearLayout>



    </RelativeLayout>

    </ScrollView>

</RelativeLayout>